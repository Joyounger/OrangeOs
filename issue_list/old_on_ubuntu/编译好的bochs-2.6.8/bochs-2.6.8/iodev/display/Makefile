 ../../instrument/stubs/instrument.h ../../plugin.h ../../extplugin.h \
 ../../param_names.h ../pci.h vgacore.h voodoo.h ../virt_timer.h \
 voodoo_types.h voodoo_data.h voodoo_main.h voodoo_func.h voodoo_raster.h
